---
import resumeData from '../data/resume.json';

const { education } = resumeData;
---

<section id="education" class="section-container bg-white dark:bg-gray-900">
  <h2 class="text-4xl font-bold text-center mb-12 gradient-text">
    Education
  </h2>
  
  <div class="grid gap-6 md:grid-cols-2 lg:grid-cols-3">
    {education.map((edu, index) => (
      <div 
        class="card animate-slide-up"
        style={`animation-delay: ${index * 100}ms`}
      >
        <div class="flex items-start mb-4">
          <svg class="w-8 h-8 text-primary-500 mr-3 flex-shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 14l9-5-9-5-9 5 9 5z" />
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 14l6.16-3.422a12.083 12.083 0 01.665 6.479A11.952 11.952 0 0012 20.055a11.952 11.952 0 00-6.824-2.998 12.078 12.078 0 01.665-6.479L12 14z" />
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 14l9-5-9-5-9 5 9 5zm0 0l6.16-3.422a12.083 12.083 0 01.665 6.479A11.952 11.952 0 0012 20.055a11.952 11.952 0 00-6.824-2.998 12.078 12.078 0 01.665-6.479L12 14zm-4 6v-7.5l4-2.222" />
          </svg>
          <div>
            <h3 class="text-lg font-bold text-gray-900 dark:text-white mb-1">
              {edu.degree}
            </h3>
            <p class="text-sm text-primary-600 dark:text-primary-400 font-medium mb-1">
              {edu.institution}
            </p>
          </div>
        </div>
        
        <div class="space-y-1">
          <p class="text-sm text-gray-600 dark:text-gray-400">
            {edu.year}
          </p>
          {edu.grade && (
            <p class="text-sm font-medium text-gray-700 dark:text-gray-300">
              Grade: {edu.grade}
            </p>
          )}
          {edu.description && (
            <p class="text-sm text-gray-600 dark:text-gray-400 mt-2">
              {edu.description}
            </p>
          )}
        </div>
      </div>
    ))}
  </div>
</section>
