---
import resumeData from '../data/resume.json';

const { accomplishments, certifications } = resumeData;
---

<section class="section-container bg-gray-50 dark:bg-gray-800">
  <h2 class="text-4xl font-bold text-center mb-12 gradient-text">
    Accomplishments & Certifications
  </h2>
  
  <div class="space-y-6 mb-12">
    <h3 class="text-2xl font-semibold text-gray-900 dark:text-white mb-4">
      Accomplishments
    </h3>
    <div class="grid gap-6 md:grid-cols-2">
      {accomplishments.map((item, index) => (
        <div 
          class="card animate-slide-up"
          style={`animation-delay: ${index * 100}ms`}
        >
          <div class="flex items-start">
            <svg class="w-6 h-6 text-secondary-500 mr-3 flex-shrink-0 mt-1" fill="currentColor" viewBox="0 0 20 20">
              <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
            </svg>
            <div>
              <h4 class="text-lg font-bold text-gray-900 dark:text-white mb-2">
                {item.title}
              </h4>
              <p class="text-gray-700 dark:text-gray-300 mb-2">
                {item.description}
              </p>
              {item.link && (
                <a 
                  href={item.link}
                  target="_blank"
                  rel="noopener noreferrer"
                  class="text-primary-600 dark:text-primary-400 hover:underline text-sm inline-flex items-center"
                >
                  View Project
                  <svg class="w-4 h-4 ml-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
                  </svg>
                </a>
              )}
            </div>
          </div>
        </div>
      ))}
    </div>
  </div>
  
  <div>
    <h3 class="text-2xl font-semibold text-gray-900 dark:text-white mb-4">
      Certifications
    </h3>
    <div class="grid gap-4 md:grid-cols-2 lg:grid-cols-3">
      {certifications.map((cert, index) => (
        <div 
          class="bg-white dark:bg-gray-700 rounded-lg p-4 shadow hover:shadow-lg transition-shadow duration-300 animate-slide-up"
          style={`animation-delay: ${index * 100}ms`}
        >
          <div class="flex items-center mb-2">
            <svg class="w-5 h-5 text-primary-500 mr-2" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M6.267 3.455a3.066 3.066 0 001.745-.723 3.066 3.066 0 013.976 0 3.066 3.066 0 001.745.723 3.066 3.066 0 012.812 2.812c.051.643.304 1.254.723 1.745a3.066 3.066 0 010 3.976 3.066 3.066 0 00-.723 1.745 3.066 3.066 0 01-2.812 2.812 3.066 3.066 0 00-1.745.723 3.066 3.066 0 01-3.976 0 3.066 3.066 0 00-1.745-.723 3.066 3.066 0 01-2.812-2.812 3.066 3.066 0 00-.723-1.745 3.066 3.066 0 010-3.976 3.066 3.066 0 00.723-1.745 3.066 3.066 0 012.812-2.812zm7.44 5.252a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
            </svg>
            <h4 class="font-bold text-gray-900 dark:text-white">
              {cert.name}
            </h4>
          </div>
          <div class="flex items-center justify-between">
            <span class="text-sm text-gray-600 dark:text-gray-400">
              {cert.year}
            </span>
            {cert.status && (
              <span class="text-xs bg-yellow-100 dark:bg-yellow-900/30 text-yellow-800 dark:text-yellow-300 px-2 py-1 rounded-full">
                {cert.status}
              </span>
            )}
          </div>
        </div>
      ))}
    </div>
  </div>
</section>
